{
  "manifest_version": 3,
  "name": "TheFitChecked Wishlist",
  "version": "1.0.0",
  "description": "Save fashion items to your TheFitChecked wishlist from any website",
  "icons": {
    "16": "images/toolbar-icon-16.png",
    "32": "images/toolbar-icon-32.png",
    "48": "images/toolbar-icon-48.png",
    "128": "images/toolbar-icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/toolbar-icon-16.png",
      "32": "images/toolbar-icon-32.png",
      "48": "images/toolbar-icon-48.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "background": {
    "service_worker": "background.js"
  }
}
