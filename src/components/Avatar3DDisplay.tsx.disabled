        modelRef.current.rotation.y += controls.rotation.y * 0.01;
        modelRef.current.rotation.z = controls.rotation.z;
      }

      // Apply zoom
      if (cameraRef.current) {
        cameraRef.current.position.z = 3 / controls.zoom;
      }

      rendererRef.current.render(sceneRef.current, cameraRef.current);
      animationRef.current = requestAnimationFrame(animate);
    };

    animate();

    return () => {
