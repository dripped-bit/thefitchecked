import React, { useState, useRef, useEffect, Suspense, useCallback, useMemo } from 'react';
import {
  ArrowLeft,
  Download,
  RotateCcw,
  ZoomIn,
  ZoomOut,
  Play,
  Pause,
  Settings,
  Star,
  CheckCircle,
  AlertTriangle,
  RefreshCw,
  Wand2,
  Sparkles,
  Loader,
  Upload,
  Shirt,
  Image as ImageIcon,
  User
} from 'lucide-react';
import * as THREE from 'three';
import AvatarEnhancement from './AvatarEnhancement';
import { CapturedPhoto, AvatarData } from '../types/photo';
import { avatarGenerationService, GenerationProgress, AvatarGenerationResult } from '../services/avatarGenerationService';
import directFashnService from '../services/directFashnService';

interface Avatar3DDisplayProps {
  avatarData: AvatarData;
  capturedPhotos: CapturedPhoto[];
  measurements: any;
  onAdjustMeasurements: () => void;
  onContinueToProfile: () => void;
  onRetakePhotos: () => void;
  onBack: () => void;
}

interface ViewerControls {
  rotation: { x: number; y: number; z: number };
  zoom: number;
  autoRotate: boolean;
  view: 'front' | 'side' | 'back' | 'free';
}

const Avatar3DDisplay: React.FC<Avatar3DDisplayProps> = ({
  avatarData,
  capturedPhotos,
  measurements,
  onAdjustMeasurements,
  onContinueToProfile,
  onRetakePhotos,
  onBack
}) => {
  const [isLoading, setIsLoading] = useState(true);
  const [model, setModel] = useState<THREE.Object3D | null>(null);
  const [error, setError] = useState<string | null>(null);
  const [showControls, setShowControls] = useState(true);
  const [showSettings, setShowSettings] = useState(false);
  const [showEnhancement, setShowEnhancement] = useState(false);
  const [qualityAnalysis, setQualityAnalysis] = useState<any>(null);
  const [enhancedAvatarUrl, setEnhancedAvatarUrl] = useState<string | null>(null);

  // Avatar generation state
  const [isGenerating, setIsGenerating] = useState(false);
  const [generationProgress, setGenerationProgress] = useState<GenerationProgress | null>(null);
  const [generationError, setGenerationError] = useState<string | null>(null);
  const [generatedAvatarData, setGeneratedAvatarData] = useState<any>(null);

  // Try-on state management
  const [selectedClothing, setSelectedClothing] = useState<string | null>(null);
  const [uploadedClothingUrl, setUploadedClothingUrl] = useState<string | null>(null);
  const [showTryOnPanel, setShowTryOnPanel] = useState(false);

  // Memory cleanup for blob URLs
  useEffect(() => {
    return () => {
      // Clean up blob URL when component unmounts
      if (uploadedClothingUrl && uploadedClothingUrl.startsWith('blob:')) {
        console.log('üßπ [AVATAR-3D] Cleaning up blob URL on unmount');
        URL.revokeObjectURL(uploadedClothingUrl);
      }
    };
  }, [uploadedClothingUrl]);

  // Upload progress state
  const [uploadProgress, setUploadProgress] = useState<{
    isUploading: boolean;
    progress: number;
    stage: string;
  }>({
    isUploading: false,
    progress: 0,
    stage: ''
  });
  const [tryOnResults, setTryOnResults] = useState<{
    isProcessing: boolean;
    result: {
      success: boolean;
      imageUrl?: string;
      error?: string;
    } | null;
    displayMode: 'original' | 'tryon';
  }>({
    isProcessing: false,
    result: null,
    displayMode: 'original'
  });

  const [controls, setControls] = useState<ViewerControls>({
    rotation: { x: 0, y: 0, z: 0 },
    zoom: 1,
    autoRotate: false,
    view: 'front'
  });

  const canvasRef = useRef<HTMLCanvasElement>(null);
  const sceneRef = useRef<THREE.Scene | null>(null);
  const rendererRef = useRef<THREE.WebGLRenderer | null>(null);
  const cameraRef = useRef<THREE.PerspectiveCamera | null>(null);
  const modelRef = useRef<THREE.Object3D | null>(null);
  const animationRef = useRef<number | null>(null);

  // Initialize Three.js scene
  useEffect(() => {
    if (!canvasRef.current) return;

    const canvas = canvasRef.current;
    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(75, canvas.clientWidth / canvas.clientHeight, 0.1, 1000);
    const renderer = new THREE.WebGLRenderer({ canvas, antialias: true, alpha: true });

    // Set up renderer
    renderer.setSize(canvas.clientWidth, canvas.clientHeight);
    renderer.setClearColor(0x000000, 0);
    renderer.shadowMap.enabled = true;
    renderer.shadowMap.type = THREE.PCFSoftShadowMap;

    // Set up camera
    camera.position.set(0, 1.6, 3);
    camera.lookAt(0, 1, 0);

    // Add lighting
    const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
    scene.add(ambientLight);

    const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
    directionalLight.position.set(10, 10, 5);
    directionalLight.castShadow = true;
    directionalLight.shadow.mapSize.width = 2048;
    directionalLight.shadow.mapSize.height = 2048;
    scene.add(directionalLight);

    const fillLight = new THREE.DirectionalLight(0xffffff, 0.3);
    fillLight.position.set(-10, 0, -5);
    scene.add(fillLight);

    // Store references
    sceneRef.current = scene;
    rendererRef.current = renderer;
    cameraRef.current = camera;

    // Handle resize
    const handleResize = () => {
      if (!cameraRef.current || !rendererRef.current || !canvasRef.current) return;

      const width = canvasRef.current.clientWidth;
      const height = canvasRef.current.clientHeight;

      cameraRef.current.aspect = width / height;
      cameraRef.current.updateProjectionMatrix();
      rendererRef.current.setSize(width, height);
    };

    window.addEventListener('resize', handleResize);

    return () => {
      window.removeEventListener('resize', handleResize);
      if (animationRef.current) {
        cancelAnimationFrame(animationRef.current);
      }
      renderer.dispose();
    };
  }, []);

  // Enhanced component mount/state logging
  useEffect(() => {
    console.log('üéØ Avatar3DDisplay mounted/updated');
  }, []);

  // Stabilize measurements to prevent infinite re-renders
  const stableMeasurements = useMemo(() => {
    if (!measurements || typeof measurements !== 'object') return null;
    return { ...measurements };
  }, [measurements && JSON.stringify(measurements)]);

  // Memoize photos to prevent re-renders on array changes
  const stablePhotos = useMemo(() => {
    return capturedPhotos || [];
  }, [capturedPhotos?.length, capturedPhotos?.map(p => p.id).join(',')]);

  // Use callback for generation function to prevent re-creation
  const generateAvatar = useCallback(async () => {
    // Enhanced debug logging
    console.log('üîç Avatar generation check:', {
      stablePhotos,
      stableMeasurements,
      generatedAvatarData,
      capturedPhotosLength: stablePhotos?.length,
      measurementsType: typeof stableMeasurements,
      measurementsKeys: stableMeasurements ? Object.keys(stableMeasurements) : null,
      hasGeneratedData: !!generatedAvatarData
    });

    // Improved generation condition logic using stable values
    const hasValidPhotos = stablePhotos && stablePhotos.length > 0;
    const hasValidMeasurements = stableMeasurements && typeof stableMeasurements === 'object' && Object.keys(stableMeasurements).length > 0;
    const alreadyGenerated = !!generatedAvatarData;

    if (!hasValidPhotos || !hasValidMeasurements || alreadyGenerated) {
      console.log('‚ùå Skipping avatar generation:', {
        hasValidPhotos,
        hasValidMeasurements,
        alreadyGenerated,
        reason: !hasValidPhotos ? 'No valid photos' :
                !hasValidMeasurements ? 'No valid measurements' :
                'Avatar already generated'
      });
      return;
    }

    console.log('‚úÖ Starting avatar generation with:', {
      photoCount: stablePhotos.length,
      measurements: stableMeasurements,
      capturedPhotos: stablePhotos
    });

    setIsGenerating(true);
    setGenerationError(null);
    setGenerationProgress(null);

    try {
      const result = await avatarGenerationService.generateAvatar(
        stablePhotos,
        stableMeasurements,
        (progress: GenerationProgress) => {
          console.log('üîÑ Generation progress:', progress);
          setGenerationProgress(progress);
        }
      );

      console.log('üéØ Generation result:', result);

      if (result.success && result.avatarData) {
        console.log('‚úÖ Avatar generation successful!');
        setGeneratedAvatarData(result.avatarData);
        setIsGenerating(false);
      } else {
        console.log('‚ùå Avatar generation failed:', result.error);
        setGenerationError(result.error || 'Avatar generation failed');
        setIsGenerating(false);
      }
    } catch (error) {
      console.error('üí• Avatar generation error:', error);
      setGenerationError(error instanceof Error ? error.message : 'Avatar generation failed');
      setIsGenerating(false);
    }
  }, [stablePhotos, stableMeasurements, generatedAvatarData, isGenerating]);

  // Compression temporarily disabled for reliability - can be re-enabled later
  // const compressImage = useCallback((file: File): Promise<{ compressedFile: File; base64: string }> => {
  //   ... compression logic removed for stability
  // }, []);

  // Handle clothing upload with instant preview and reliable processing
  const handleClothingUpload = useCallback(async (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (file) {
      console.log('üöÄ [AVATAR-3D] Starting upload process...', {
        name: file.name,
        type: file.type,
        size: `${(file.size / 1024 / 1024).toFixed(2)}MB`
      });

      // Validate file type and size
      const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
      if (!validTypes.includes(file.type)) {
        console.error('‚ùå [AVATAR-3D] Invalid file type. Please upload JPG, PNG, or WebP.');
        alert('Invalid file type. Please upload JPG, PNG, or WebP.');
        return;
      }

      if (file.size > 5 * 1024 * 1024) { // 5MB limit
        console.error('‚ùå [AVATAR-3D] File too large. Please upload an image smaller than 5MB.');
        alert('File too large. Please upload an image smaller than 5MB.');
        return;
      }

      try {
        // Clean up previous blob URL if it exists
        if (uploadedClothingUrl && uploadedClothingUrl.startsWith('blob:')) {
          console.log('üßπ [AVATAR-3D] Cleaning up previous blob URL');
          URL.revokeObjectURL(uploadedClothingUrl);
        }

        // ‚ö° INSTANT PREVIEW - Show image immediately
        console.log('üì∏ [AVATAR-3D] Creating instant preview...');
        const previewUrl = URL.createObjectURL(file);
        setUploadedClothingUrl(previewUrl);

        // Start progress for base64 conversion
        setUploadProgress({
          isUploading: true,
          progress: 30,
          stage: 'Processing image...'
        });

        console.log('üîÑ [AVATAR-3D] Starting reliable base64 conversion...');

        // Use simple, reliable FileReader for base64 conversion
        const base64Result = await new Promise<string>((resolve, reject) => {
          const reader = new FileReader();

          reader.onload = (e) => {
            const result = e.target?.result as string;
            if (result && result.startsWith('data:image/')) {
              console.log('‚úÖ [AVATAR-3D] FileReader conversion successful');
              resolve(result);
            } else {
              console.error('‚ùå [AVATAR-3D] FileReader returned invalid result:', result);
              reject(new Error('Invalid file reader result'));
            }
          };

          reader.onerror = (error) => {
            console.error('‚ùå [AVATAR-3D] FileReader error:', error);
            reject(new Error('Failed to read file'));
          };

          reader.onabort = () => {
            console.error('‚ùå [AVATAR-3D] FileReader aborted');
            reject(new Error('File reading aborted'));
          };

          // Start reading
          reader.readAsDataURL(file);
        });

        // Update progress
        setUploadProgress({
          isUploading: true,
          progress: 80,
          stage: 'Finalizing...'
        });

        // Store base64 for API calls
        setSelectedClothing(base64Result);

        // Complete
        setUploadProgress({
          isUploading: true,
          progress: 100,
          stage: 'Ready for try-on!'
        });

        // Clear progress after delay
        setTimeout(() => {
          setUploadProgress({
            isUploading: false,
            progress: 0,
            stage: ''
          });
        }, 1000);

        console.log('‚úÖ [AVATAR-3D] Upload completed successfully:', {
          previewUrl: previewUrl.substring(0, 50) + '...',
          base64Length: base64Result.length,
          isValidBase64: base64Result.startsWith('data:image/'),
          method: 'reliable-filereader'
        });

      } catch (error) {
        console.error('üí• [AVATAR-3D] Upload failed with error:', error);

        // Clear progress on error
        setUploadProgress({
          isUploading: false,
          progress: 0,
          stage: ''
        });

        // Show user-friendly error
        const errorMessage = error instanceof Error ? error.message : 'Unknown error occurred';
        alert(`Upload failed: ${errorMessage}. Please try again with a different image.`);

        // Clean up preview URL if it was created
        if (uploadedClothingUrl) {
          URL.revokeObjectURL(uploadedClothingUrl);
          setUploadedClothingUrl(null);
        }
        setSelectedClothing(null);
      }
    }
  }, []); // Removed compressImage dependency since we're using simple FileReader

  // Handle try-on with direct FASHN API
  const handleTryOn = useCallback(async () => {
    console.log('üöÄ [DEBUG-TRYON] Try-on button clicked, starting comprehensive validation...');

    // 1. Check if clothing is selected
    console.log('üîç [DEBUG-TRYON] Step 1 - Checking clothing selection:', {
      hasSelectedClothing: !!selectedClothing,
      selectedClothingLength: selectedClothing?.length || 0,
      selectedClothingType: selectedClothing ?
        (selectedClothing.startsWith('data:image/') ? 'base64' : 'other') : 'null'
    });

    if (!selectedClothing) {
      console.error('‚ùå [DEBUG-TRYON] BLOCKED: No clothing selected for try-on');
      alert('Please select clothing first before trying on!');
      return;
    }

    // 2. Check avatar image availability
    console.log('üîç [DEBUG-TRYON] Step 2 - Checking avatar image sources:', {
      enhancedAvatarUrl: enhancedAvatarUrl || 'not available',
      'generatedAvatarData?.previewUrl': generatedAvatarData?.previewUrl || 'not available',
      'avatarData.previewUrl': avatarData.previewUrl || 'not available',
      avatarDataKeys: Object.keys(avatarData || {}),
      generatedAvatarDataKeys: generatedAvatarData ? Object.keys(generatedAvatarData) : 'null'
    });

    const avatarImageUrl = enhancedAvatarUrl || generatedAvatarData?.previewUrl || avatarData.previewUrl;

    if (!avatarImageUrl) {
      console.error('‚ùå [DEBUG-TRYON] BLOCKED: No avatar image available for try-on');
      alert('Avatar image not available. Please wait for avatar generation to complete or retake photos.');
      return;
    }

    // 3. Validate formats with thorough checks
    const isBase64Clothing = selectedClothing.startsWith('data:image/');
    const isHttpAvatar = avatarImageUrl.startsWith('http');
    const isBase64Avatar = avatarImageUrl.startsWith('data:image/');

    console.log('üîç [DEBUG-TRYON] Step 3 - Format validation:', {
      clothing: {
        isBase64: isBase64Clothing,
        format: selectedClothing.substring(0, 30) + '...',
        size: `${(selectedClothing.length / 1024).toFixed(2)}KB`
      },
      avatar: {
        isHttp: isHttpAvatar,
        isBase64: isBase64Avatar,
        url: avatarImageUrl.substring(0, 50) + '...',
        source: enhancedAvatarUrl ? 'enhanced' :
               generatedAvatarData?.previewUrl ? 'generated' : 'original'
      }
    });

    // 3a. Clothing validation (allow both base64 and HTTP)
    if (!isBase64Clothing && !selectedClothing.startsWith('http')) {
      console.error('‚ùå [DEBUG-TRYON] BLOCKED: Clothing is neither base64 nor HTTP URL format');
      alert('Invalid clothing format detected. Please reupload your clothing image.');
      return;
    }

    // Validate base64 clothing structure (only if base64)
    if (isBase64Clothing) {
      const clothingMimeMatch = selectedClothing.match(/^data:image\/([^;]+);base64,/);
      if (!clothingMimeMatch) {
        console.error('‚ùå [DEBUG-TRYON] BLOCKED: Invalid base64 clothing structure');
        alert('Corrupted clothing data detected. Please reupload your clothing image.');
        return;
      }

      const clothingMimeType = clothingMimeMatch[1];
      const validClothingTypes = ['jpeg', 'jpg', 'png', 'webp'];
      if (!validClothingTypes.includes(clothingMimeType.toLowerCase())) {
        console.error('‚ùå [DEBUG-TRYON] BLOCKED: Unsupported clothing image type:', clothingMimeType);
        alert(`Unsupported clothing image type: ${clothingMimeType}. Please use JPG, PNG, or WebP.`);
        return;
      }
    }

    // 3b. Thorough avatar URL validation
    if (!isHttpAvatar && !isBase64Avatar) {
      console.error('‚ùå [DEBUG-TRYON] BLOCKED: Avatar URL is neither HTTP nor base64');
      alert('Invalid avatar format detected. Please regenerate your avatar.');
      return;
    }

    // Validate HTTP avatar URL structure
    if (isHttpAvatar) {
      try {
        const avatarUrl = new URL(avatarImageUrl);
        console.log('‚úÖ [DEBUG-TRYON] Avatar HTTP URL structure valid:', {
          protocol: avatarUrl.protocol,
          hostname: avatarUrl.hostname,
          pathname: avatarUrl.pathname.substring(0, 50) + '...'
        });
      } catch (error) {
        console.error('‚ùå [DEBUG-TRYON] BLOCKED: Invalid avatar HTTP URL structure:', error);
        alert('Invalid avatar URL detected. Please regenerate your avatar.');
        return;
      }
    }

    // Validate base64 avatar structure
    if (isBase64Avatar) {
      const avatarMimeMatch = avatarImageUrl.match(/^data:image\/([^;]+);base64,/);
      if (!avatarMimeMatch) {
        console.error('‚ùå [DEBUG-TRYON] BLOCKED: Invalid base64 avatar structure');
        alert('Corrupted avatar data detected. Please regenerate your avatar.');
        return;
      }

      const avatarMimeType = avatarMimeMatch[1];
      const validAvatarTypes = ['jpeg', 'jpg', 'png', 'webp'];
      if (!validAvatarTypes.includes(avatarMimeType.toLowerCase())) {
        console.error('‚ùå [DEBUG-TRYON] BLOCKED: Unsupported avatar image type:', avatarMimeType);
        alert(`Unsupported avatar image type: ${avatarMimeType}. Please regenerate your avatar.`);
        return;
      }
    }

    console.log('‚úÖ [DEBUG-TRYON] All format validations passed successfully');

    // 3c. Avatar pose suitability check
    console.log('üîç [DEBUG-TRYON] Step 3c - Checking avatar pose suitability for try-on');
    if (isHttpAvatar || isBase64Avatar) {
      // For now, we'll log a warning if the avatar might not be ideal
      // In the future, this could include actual pose detection
      console.log('üí° [DEBUG-TRYON] Avatar pose recommendation: For best try-on results, ensure your avatar shows a full-body standing pose with arms slightly away from body');

      // Check if avatar URL suggests it might be a cropped image
      const avatarUrlLower = avatarImageUrl.toLowerCase();
      if (avatarUrlLower.includes('crop') || avatarUrlLower.includes('face') || avatarUrlLower.includes('portrait')) {
        console.warn('‚ö†Ô∏è [DEBUG-TRYON] Avatar URL suggests it might be cropped or face-only - this may cause pose detection issues');
      }
    }

    // 4. Check FASHN API service availability
    console.log('üîç [DEBUG-TRYON] Step 4 - Checking FASHN service availability');
    try {
      if (!directFashnService) {
        throw new Error('DirectFashnService not available');
      }
      console.log('‚úÖ [DEBUG-TRYON] DirectFashnService is available');
    } catch (error) {
      console.error('‚ùå [DEBUG-TRYON] BLOCKED: FASHN service error:', error);
      alert('FASHN service is not available. Please check your connection.');
      return;
    }

    // 5. Start processing
    console.log('üîç [DEBUG-TRYON] Step 5 - Starting try-on process');
    setTryOnResults(prev => ({
      ...prev,
      isProcessing: true,
      result: null,
      displayMode: 'original' // Keep showing original avatar during processing
    }));

    try {
      console.log('üìû [DEBUG-TRYON] Step 6 - Calling FASHN API:', {
        function: 'directFashnService.tryOnClothing',
        avatarImageUrl: avatarImageUrl.substring(0, 50) + '...',
        selectedClothingSize: selectedClothing.length,
        timestamp: new Date().toISOString()
      });

      const result = await directFashnService.tryOnClothing(avatarImageUrl, selectedClothing);

      console.log('üì® [DEBUG-TRYON] Step 7 - FASHN API response received:', {
        success: result.success,
        hasImageUrl: !!result.imageUrl,
        imageUrlType: result.imageUrl?.startsWith('http') ? 'http' : 'other',
        api: result.api,
        resultKeys: Object.keys(result || {}),
        imageUrlLength: result.imageUrl?.length || 0,
        processingTime: result.processingTime,
        attempts: result.attempts
      });

      if (result.success && result.imageUrl) {
        console.log('‚úÖ [DEBUG-TRYON] Step 8 - SUCCESS: Try-on completed successfully');
        console.log('üéØ [DEBUG-TRYON] Setting try-on results to success state');

        // Successfully got try-on result
        setTryOnResults(prev => ({
          ...prev,
          isProcessing: false,
          result: {
            success: true,
            imageUrl: result.imageUrl,
          },
          displayMode: 'tryon' // Now switch to showing try-on result
        }));

        alert('‚úÖ Try-on successful! The avatar now shows you wearing the selected clothing. The try-on result is displayed in the avatar preview above.');

      } else {
        console.warn('‚ö†Ô∏è [DEBUG-TRYON] Step 8 - PARTIAL FAIL: API succeeded but no valid image');
        console.log('üîç [DEBUG-TRYON] Detailed result analysis:', {
          resultSuccess: result.success,
          hasImageUrl: !!result.imageUrl,
          imageUrlValue: result.imageUrl || 'undefined',
          fullResult: result
        });

        // API call succeeded but no valid result
        setTryOnResults(prev => ({
          ...prev,
          isProcessing: false,
          result: {
            success: false,
            error: 'Virtual try-on completed but no result image was generated'
          },
          displayMode: 'original' // Stay on original avatar
        }));

        alert('‚ö†Ô∏è Try-on processing completed but no result image was generated. Please try again.');
      }

    } catch (error) {
      console.error('‚ùå [DEBUG-TRYON] Step 8 - COMPLETE FAIL: Try-on failed with error:', error);
      console.log('üîç [DEBUG-TRYON] Error details:', {
        errorType: typeof error,
        errorConstructor: error?.constructor?.name,
        errorMessage: error instanceof Error ? error.message : String(error),
        errorStack: error instanceof Error ? error.stack : 'No stack trace'
      });

      setTryOnResults(prev => ({
        ...prev,
        isProcessing: false,
        result: {
          success: false,
          error: error instanceof Error ? error.message : 'Try-on failed'
        },
        displayMode: 'original' // Stay on original avatar on error
      }));

      const errorMessage = error instanceof Error ? error.message : 'Unknown error occurred';
      alert(`‚ùå Try-on failed: ${errorMessage}. Please check the console for details and try again.`);
    }

    console.log('üèÅ [DEBUG-TRYON] Try-on process completed (success or failure)');
  }, [selectedClothing, enhancedAvatarUrl, generatedAvatarData, avatarData]);

  // Get current display image (original avatar or try-on result)
  const getCurrentDisplayImage = useCallback(() => {
    if (tryOnResults.displayMode === 'tryon' && tryOnResults.result?.success && tryOnResults.result.imageUrl) {
      return tryOnResults.result.imageUrl;
    }
    return enhancedAvatarUrl || generatedAvatarData?.previewUrl || avatarData.previewUrl || '/portrait/my-new-portrait.png';
  }, [tryOnResults, enhancedAvatarUrl, generatedAvatarData, avatarData]);

  // Start avatar generation when component loads
  useEffect(() => {
    console.log('üîç Avatar3DDisplay generation useEffect triggered');
    console.log('üì∏ stablePhotos:', stablePhotos);
    console.log('üìè stableMeasurements:', stableMeasurements);
    console.log('üé≠ generatedAvatarData:', generatedAvatarData);
    console.log('‚ö° isGenerating:', isGenerating);

    if (!isGenerating) {
      generateAvatar();
    }
  }, [generateAvatar, isGenerating]);

  // Load 3D model
  useEffect(() => {
    // Use generated avatar data if available, otherwise fall back to placeholder
    const currentAvatarData = generatedAvatarData || avatarData;

    if (!currentAvatarData.modelUrl && !currentAvatarData.previewUrl && !isGenerating) {
      // Show placeholder only if not generating
      return;
    }

    const loadModel = async () => {
      console.log('üé® Loading 3D model...');
      setIsLoading(true);
      setError(null);

      try {
        // Enhanced null checks for Three.js objects
        if (!sceneRef.current || !rendererRef.current || !cameraRef.current) {
          console.error('üí• Three.js scene objects not initialized');
          throw new Error('3D scene not properly initialized');
        }

        if (currentAvatarData.modelUrl) {
          // TODO: Load actual GLTF/FBX model from URL
          // For now, we'll use the placeholder but with better styling
          console.log('üìÅ Loading 3D model from:', currentAvatarData.modelUrl);
        }

        // Enhanced geometry creation with error handling
        let geometry, material, avatarMesh, headGeometry, headMaterial, head;

        try {
          // Create placeholder avatar (will be replaced with actual model loading)
          geometry = new THREE.CapsuleGeometry(0.3, 1.5, 8, 16);
          material = new THREE.MeshLambertMaterial({
            color: 0xfdbcb4, // Skin color
            transparent: true,
            opacity: 0.9
          });

          avatarMesh = new THREE.Mesh(geometry, material);
          avatarMesh.position.y = 0.75;
          avatarMesh.castShadow = true;
          avatarMesh.receiveShadow = true;

          // Add simple body parts with error handling
          headGeometry = new THREE.SphereGeometry(0.25, 16, 16);
          headMaterial = new THREE.MeshLambertMaterial({ color: 0xfdbcb4 });
          head = new THREE.Mesh(headGeometry, headMaterial);
          head.position.y = 1.75;
          head.castShadow = true;
        } catch (geometryError) {
          console.error('üí• Error creating 3D geometry:', geometryError);
          throw new Error('Failed to create 3D avatar geometry');
        }

        const group = new THREE.Group();
        group.add(avatarMesh);
        group.add(head);

        // Add to scene
        if (sceneRef.current) {
          // Remove previous model
          if (modelRef.current) {
            sceneRef.current.remove(modelRef.current);
          }

          sceneRef.current.add(group);
          modelRef.current = group;
          setModel(group);
        }

        // Analyze quality - use generated data if available
        const qualityScore = currentAvatarData.qualityScore || 85;
        setQualityAnalysis({
          accuracy: qualityScore,
          resemblance: Math.min(100, qualityScore + 5),
          proportions: Math.max(75, qualityScore - 3),
          details: Math.max(70, qualityScore - 10)
        });

        setIsLoading(false);
      } catch (err) {
        setError(err instanceof Error ? err.message : 'Failed to load avatar');
